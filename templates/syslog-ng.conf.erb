@version: 3.3

options { chain_hostnames(off); flush_lines(0); use_dns(no); use_fqdn(no);
          owner("root"); group("adm"); perm(0640); stats_freq(0);
          bad_hostname("^gconfd$");
};

source s_all { 
  internal(); 
  unix-stream("/dev/log"); 
}; 

destination d_loggly { 
  tcp("logs.loggly.com" port(33504)); 
}; 

log { 
  source(s_all); destination(d_loggly); 
}; 
